{
  "name": "dnd-5e-dm-tools",
  "version": "0.0.1",
  "description": "An experimental (mostly for me) javascript toolset for D&D 5e",
  "main": "index.html",
  "author": "Mark ter Maat",
  "license": "MIT",
  "devDependencies": {
  	"jshint": "^2.6.0",
  	"rimraf": "^2.2.8",
  	"uglify-js": "^2.4.16"
  },
  "scripts": {
  	"clean": "rimraf dist/*.js dist/*.js.map",

  	"prebuild": "npm run clean -s",
  	"build": "npm run build:scripts -s",
  	"build:scripts": "uglifyjs -o public/dm-tools.js assets/scripts/*.js --source-map public/dm-tools.js.map"
  }
}